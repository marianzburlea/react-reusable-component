{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wowjob/atom": ["libs/atom/src/index.ts"],
      "@wowjob/atom/server": ["libs/atom/src/server.ts"],
      "@wowjob/molecule": ["libs/molecule/src/index.ts"],
      "@wowjob/molecule/server": ["libs/molecule/src/server.ts"],
      "@wowjob/organism": ["libs/organism/src/index.ts"],
      "@wowjob/organism/server": ["libs/organism/src/server.ts"],
      "@wowjob/template": ["libs/template/src/index.ts"],
      "@wowjob/template/server": ["libs/template/src/server.ts"],
      "@wowjob/type": ["libs/type/src/index.ts"],
      "@wowjob/type/server": ["libs/type/src/server.ts"],
      "@wowjob/util": ["libs/util/src/index.ts"],
      "@wowjob/util/server": ["libs/util/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
